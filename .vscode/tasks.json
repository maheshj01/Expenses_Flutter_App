{
       "version": "2.0.0", 
    "tasks": [
        {
            "type": "flutter",
            "command": "flutter",
            "args": [
                "clean",
            ],
            "group": "none",
            "dependsOrder": "sequence",
            "label": "flutter clean",
            "detail": "Clean up",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "type": "flutter",
            "command": "flutter",
            "args": [
                "pub",
                "get"
            ],
