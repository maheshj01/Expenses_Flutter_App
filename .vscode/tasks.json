            "group": "none",
            "label": "flutter pub get",
            "detail": "get flutter pub packages",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "type": "flutter",
            "command": "flutter",
            "dependsOrder": "sequence",
            "dependsOn":"flutter pub get",
            "args": [
                "pub",
                "run",
                "build_runner",
                "build",
                "--delete-conflicting-outputs"
            ],
            "problemMatcher": [
                "$dart-build_runner"
            ],
            "group": "build",
            "label": "flutter: flutter pub run build_runner build",
            "detail": "Generate files",
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
